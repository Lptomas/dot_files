# open files with:
map oc $vscode "$f" ; exit
map ol $leafpad "$f" ; exit
map ov $nvim "$f" ; exit
map og $gedit "$f" ; exit
map oi $gimp "$f" ; exit
map ot $thunar "$F" ; exit
map ow $wine "$f"  ; exit

# open prograns  : the & puts it in the background. The disown tells the shell to not job control it. The exit tells the shell to exit.

# really need disown to open 
map pc $code-oss "$f" & disown; exit
map pl $leafpad "$f" & disown; exit
map pv $vim "$f" & disown; exit
map pg $gedit "$f" & disown; exit
map pi $gimp & disown; exit
map pt $thunar "$F" & disown; exit    
map pf $firefox & disown; exit


